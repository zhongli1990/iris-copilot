# ============================================================
# IRIS AI Agent Bridge â€” Environment Configuration
# Copy this file to .env and fill in your values.
# ============================================================

# ------ Server ------
PORT=3100

# ------ Anthropic (Claude) ------
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-opus-4-1-20250805

# ------ OpenAI ------
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-5.2-codex

# ------ OpenAI Codex Native Runner (agentic) ------
CODEX_NATIVE_ENABLED=1
CODEX_NATIVE_MODEL=gpt-5.2-codex
# Workspace root for Codex agent context (relative to bridge/ by default)
CODEX_NATIVE_WORKSPACE=..
# Optional comma-separated extra directories under workspace root
# Example: cls,docs,deploy
CODEX_NATIVE_ADDITIONAL_DIRS=
# Sandbox: read-only | workspace-write | danger-full-access
CODEX_NATIVE_SANDBOX=read-only
# Approval policy: never | on-request | untrusted
CODEX_NATIVE_APPROVAL=never

# ------ Azure OpenAI (optional, used instead of OpenAI when set) ------
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_KEY=
AZURE_OPENAI_DEPLOYMENT=gpt-4o
AZURE_OPENAI_API_VERSION=2024-10-21

# ------ IRIS Connection (for callback inspection) ------
IRIS_BASE_URL=http://localhost:52773
IRIS_USERNAME=_SYSTEM
IRIS_PASSWORD=SYS
IRIS_NAMESPACE=DEMO2_AI2

# ------ Default Runner ------
# Which runner to prefer: openai-codex-sdk | claude-agent-sdk | openai-codex
DEFAULT_RUNNER=openai-codex-sdk
#DEFAULT_RUNNER=claude-agent-sdk

# ------ Generic Capability Gateway (additive path) ------
# 0 = disabled (default), 1 = enabled
GENERIC_OPERATE_ENABLED=1
GENERIC_OPERATE_APPROVAL_REQUIRED_FOR_MUTATION=1
GENERIC_OPERATE_DRYRUN_REQUIRED=1



# ------ Logging ------
LOG_LEVEL=info
